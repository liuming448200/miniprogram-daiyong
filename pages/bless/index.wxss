/**index.wxss**/
.sku-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}

.sku-item-left {
  display: flex;
}

.sku-img-wrap {
  width: 240rpx;
  height: 218rpx;
  overflow: hidden;
  border: 6rpx solid;
  border-color: #EFBA2C #DE2127 #DE2127 #EFBA2C;
}

.sku-img {
  width: 100%;
  height: inherit;
}

.sku-detail {
  margin-left: 30rpx;
  position: relative;
  flex: 1;
}

.sku-name {
  font-size: 32rpx;
  color: #DE2127;
}

.sku-desc {
  color: #959396;
  margin-top: 10rpx;
  font-size: 24rpx;
}

.sku-button {
  position: absolute;
  bottom: 0;
  color: #ffffff;
  background-color: #EFBA2C;
  border-radius: 32rpx;
  padding: 2rpx 20rpx;
  white-space: nowrap;
  font-size: 32rpx;
}

.content {
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.bless-item {
  margin-top: 30rpx;
  border: 6rpx solid;
  border-color: #EFBA2C #DE2127 #DE2127 #EFBA2C;
}

.user-info {
  display: flex;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 24rpx;
}

.user-message {
  padding: 20rpx;
  font-size: 28rpx;
}

.user-agree {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.user-agree-button {
  color: #ffffff;
  background-color: #DE2127;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 32rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.no-more {
  text-align: center;
  color: #959396;
  font-size: 32rpx;
  margin-top: 30rpx;
}
